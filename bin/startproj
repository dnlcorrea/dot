#!/bin/bash

if [ $# -eq 0 ]; then
   echo "Please provide an argument, doode"
   exit 1
fi

git clone bitbucket.org:dnlcorrea31/pds.git $1 
cd $1

(composer install && php artisan key:generate && php artisan storage:link && php artisan migrate &) 

npm i && npm update

mysql -uroot -p <<EOF
create schema ${1};
create user '${1}' identified by 'dnl4307'
grant all on ${1}.* to ${1}
flush privileges
EOF


