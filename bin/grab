#!/bin/bash

# ffmpeg -y \
# -f x11grab -video_size 960x1080 -i :0.0+0,1080  \
# -f pulse -i default \
# -pix_fmt yuv420p -preset fast -crf 22  -c:v libx264 -c:a aac out.mp4

ffmpeg -y \
-f x11grab -video_size 1920x1080 -i :0.0  \
-f pulse -i 1 \
-pix_fmt yuv420p -preset fast -crf 22 -c:v libx264 -c:a aac -b:a 60k out.mp4
