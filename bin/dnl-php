#!/usr/bin/env python

import sys, re

string = sys.argv[1]

className = re.split(r"\.|\+", string)[0]

print ("class %s {\n" % className.capitalize())

if "_c" in string:
    print("\tpublic __construct() {\n\t\n\t}\n")
    string = string.strip("_c")

for i in re.findall('\+\w+', string):
    print("\tpublic $%s;" % i.strip('+'))


print()

for i in re.findall('\.\w+', string):
    print("\tpublic %s() {\n\t\n\t}\n" % i.strip('.'))

# The end
print ("}")
